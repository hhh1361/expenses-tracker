{
    "trailingComma": "none",
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        }
    ],
    "printWidth": 80,
    "tabWidth": 4,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "parser": "flow"
}
